{% extends "base.html.twig" %}

{% block title %}{{ 'security.password_reset' }}{% endblock %}

{% block body %}
    <div class="login">
        <div class="container">
            <div class="row">
                <div class="login-logo">
                    <a href="{{ path('index') }}">
                        <img src="/img/CashUpLogo.png" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="login-container">
                <div class="site-login">
                    <h1 class="form-title">{{'security.forgot_password_title'|trans }}</h1>
                    <p class="password-message">
                        {{'security.forgot_password_text'|trans }}
                    </p>
                    {{ form_start(form, {'action': path('password_reset'), 'attr': {'id': 'login-form', 'novalidate': 'novalidate'}}) }}

                        <div class="user-name reset-name">
                            {{ form_label(form.username, null,  {'label_attr': {'class': 'control-label reset-password-name', 'id': 'title-name'}}) }}
                            {{ form_widget(form.username, {'id': 'username', 'attr': {'class': 'form-control', 'placeholder': 'security.account.username_placeholder'|trans}}) }}
                            {{ form_errors(form.username) }}
                            <p class="password-error-message">
                                <span id="error-name-message-required" class="not-active">{{ 'security.account.username_not_blank'|trans }}</span>
                                <span id="error-name-message-must-contain" class="not-active">{{ 'security.account.username_min_length'|trans }}</span>
                            </p>
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-group password-btn">
                            <button type="submit" class="btn-login" name="login-button">{{ 'security.send_button.title'|trans }}</button>
                            <a class="reset-password-link" href="{{ path('login') }}">{{ 'security.account.login'|trans }}</a>
                        </div>

                        <input type="hidden" name="_target_path" value="/" />
                    {{ form_end(form, {'render_rest': false}) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_additional %}
    <script src="/js/validation/user-name.js"></script>
{% endblock %}
